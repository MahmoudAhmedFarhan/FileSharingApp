@inject IViewLocalizer Localizer
@model RegisterViewModel

@{
    ViewData["Title"] = Localizer["Title"];
}


<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area" style="padding-top:0px">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>@Localizer["Title"]</h2>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form id="contact" method="post" class="mu-contact-form" asp-action="Register" asp-controller="Account" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input type="text" asp-for="FirstName" class="form-control" placeholder="@Localizer["FirstName"]" id="name" required>
                                            <span asp-validation-for="FirstName"></span>
                                        </div>
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input type="text" asp-for="LastName" class="form-control" placeholder="@Localizer["LastName"]" id="name" required>
                                            <span asp-validation-for="LastName"></span>
                                        </div>
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input type="email" asp-for="Email" class="form-control" placeholder="@Localizer["Email"]" id="name" required>
                                            <span asp-validation-for="Email"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-envelope mu-contact-icon"></span>
                                            <input type="password" asp-for="Password" class="form-control" placeholder="@Localizer["Password"]" id="email" required>
                                            <span asp-validation-for="Password"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-envelope mu-contact-icon"></span>
                                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="@Localizer["ConfirmPassword"]" id="email" required>
                                            <span asp-validation-for="ConfirmPassword"></span>
                                        </div>

                                        <button type="submit" class="mu-send-msg-btn"><span>@Localizer["Submit"]</span></button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- End Contact Content -->
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
