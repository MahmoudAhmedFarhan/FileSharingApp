@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>@Localizer["Header"]</h1>
    <br />
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-8">
                <form asp-controller="Uploads" asp-action="Results">
                    <div class="input-group input-group-lg mb-3">
                        <input type="text" class="form-control" name="Term" placeholder="@Localizer["FileName"]" aria-label="Recipient's username" aria-describedby="button-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-outline-primary" type="submit" id="button-addon2">@Localizer["Button.Search"]</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-md-12 text-center" style="margin-top:40px">
                <h2>@Localizer["Popular"]</h2>
                <hr />
                <table class="table">
                    <tbody>
                        @foreach (UploadViewModel item in ViewBag.Popular)
                        {
                        <tr>
                            <td>
                                @if (item.ContentType.ToLower().StartsWith("image/"))
                                {
                                    <img data-src="/Uploads/@item.FileName" width="70" height="70" class="img-thumbnail lazyload" alt="Alternate Text" />
                                }
                            </td>
                            <td>@item.OriginalFileName</td>
                            <td><strong>@Localizer["Downloads"] : </strong>@item.DownloadCount</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>